			read -e -p $'\t\e[1;97m[ \e[32mDá´‡É¢Éªêœ±á´›ÉªÊ€ÉªÊŸêœ±ÉªÉ´ MÉª? \e[33m[Ê/N] \e[97m] \e[32m~ \e[31mÂ»Â»\e[97m ' scriptChange
			printf "\n\n\n"
			if [[ $scriptChange == y || $scriptChange == Y ]];then

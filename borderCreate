if [[ $1 == -c || $1 == --copy ]];then
	
	# Sá´„Ê€Éªá´˜á´› CÊ€á´‡á´€á´›á´‡ SÊœá´Ê€á´›á´„á´œá´›
	if [[ ! -a $PREFIX/bin/$scriptName ]];then

#!/bin/bash
# Aá´œá´›Êœá´Ê€ Â» Uá´á´œT Ká´€Rá´€
# https://t.me/umutkaratools
version="v1.0"
scriptStatus="True"


w='\e[1;97m'
r='\e[1;31m'
g='\e[1;32m'
y='\e[1;33m'


if [[ $1 == -e || $1 == --edit  ]];then
	if [[ -a $PREFIX/bin/vim ]];then
		vim $0
	fi
	exit
fi

if [[ ! -a $PREFIX/bin/git ]];then
	printf "\n\n\n${g}
	\r\tâ•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—
	\r\tâ•‘ âœ… ${w}GÉªá´› Ká´œÊ€á´œÊŸá´œÊá´Ê€ ${g}â•‘
	\r\tâ•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•\n\n\n"
	pkg install git -y
fi

if [[ ! -a $PREFIX/bin/curl ]];then
	printf "\n\n\n${g}
	\r\tâ•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—
	\r\tâ•‘ âœ… ${w}Cá´œÊ€L Ká´œÊ€á´œÊŸá´œÊá´Ê€ ${g}â•‘
	\r\tâ•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•\n\n\n"
	pkg install curl -y
fi

if [[ ! -a $PREFIX/bin/node ]];then
	printf "\n\n\n${g}
	\r\tâ•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—
	\r\tâ•‘ âœ… ${w}Ná´á´…á´‡Jêœ± Ká´œÊ€á´œÊŸá´œÊá´Ê€ ${g}â•‘
	\r\tâ•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•\n\n\n"
	pkg install nodejs -y
fi


if [[ ! -a $PREFIX/bin/heroku ]];then
	printf "\n\n\n${g}
	\r\tâ•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—
	\r\tâ•‘ âœ… ${w}Há´‡Ê€á´á´‹á´œ Ká´œÊ€á´œÊŸá´œÊá´Ê€ ${g}â•‘
	\r\tâ•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•\n\n\n"
	npm i -g heroku
fi

printf "\n${y}
\r\tâ•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—
\r\tâ•‘ ğŸ”¸ ${w}Lá´œá´›Ò“á´‡É´ Bá´‡á´‹ÊŸá´‡ÊÉªÉ´Éªá´¢... ${y}â•‘
\r\tâ•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•\n\n\n${w}"

whoamiName=$(heroku whoami |sed -n 1p)
whoamiStatusIcon="âœ…"
whoamiStatus="True"

if [[ ! -n $whoamiName ]];then
	whoamiName="Not logged in"
	whoamiStatusIcon="â—"
	whoamiStatus="False"
fi

whoamiNameCount=$(echo "$whoamiName" |wc -m)

scriptName=`basename "$0"`
appName="No App"
appNameCount=$(echo "$appName" |wc -m)

if [[ -a .git ]];then
	herokuControl=$(cat .git/config |grep -o "git.heroku.com" |wc -l)
fi

if [[ $herokuControl == 1 ]];then
	appName=$(cat .git/config |grep url |awk -F '.git' '{print $2}' | awk -F "/" '{print $2}')
	appNameCount=$(echo "$appName" |wc -m)
	appStatusIcon="âœ…"
	appStatus="True"

	if [[ $whoamiStatus == True ]];then
		appControl=$(heroku apps |grep -o ^$appName\$)
		if [[ ! -n $appControl ]];then
			appStatusIcon="â—"
			appStatus="NoPermission"
		fi
	fi
else
	appStatus="False"
	appStatusIcon="â—"

fi

let whoamiNameCount+=8
let appNameCount+=$whoamiNameCount

border="â•"
if [[ -a $HOME/.result ]];then
	rm $HOME/.result
fi
for count in `seq 0 $appNameCount`
do
	printf "$border" >> $HOME/.result
done
border=$(cat $HOME/.result)

function _logout (){
	read -e -p $'\t\e[1;97m[ \e[32mÃ‡Ä±á´‹Ä±ÅŸ Yá´€á´˜Ä±ÊŸêœ±Ä±É´ MÄ±? \e[33m[Ê/N] \e[97m] \e[32m~ \e[31mÂ»Â»\e[97m ' exitScript
	if [[ $exitScript == y || $exitScript == Y || $exitScript == "" ]];then
		printf "\n\n\n${g}
		\r\tâ•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—
		\r\tâ•‘ â— ${w}CÉªá´‹Éªêœ± Yá´€á´˜ÉªÊŸá´…Éª ${g}â•‘
		\r\tâ•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•\n\n\n"
		exit
	else
		printf "\n\n\n"
		sleep 1
		$0
		exit
	fi
}

function _appCheck () {

	while true
	do
		advance="True"

		if [[ $2 == new ]];then
			printf "\n\n\n"
			read -e -p $'\t\e[1;97m[ \e[32mYá´‡É´Éª UÊÉ¢á´œÊŸá´€á´á´€ Aá´…Éª GÉªÊ€ÉªÉ´Éªá´¢ \e[97m] \e[32m~ \e[31mÂ»Â»\e[97m ' appName
			newName="$appName"
		fi

		if [[ $2 == change ]];then
			read -e -p $'\t\e[1;97m[ \e[32mDá´‡É¢Éªêœ±á´›ÉªÊ€ÉªÊŸá´‡á´„á´‡á´‹ UÊÉ¢á´œÊŸá´€á´á´€ Aá´…ÉªÉ´Éª GÉªÊ€ÉªÉ´Éªá´¢ \e[97m] \e[32m~ \e[31mÂ»Â»\e[97m ' appName
			printf "\n\n\n"
			appControl=$(heroku apps |grep -o ^$appName\$)
			if [[ ! -n $appControl ]];then
				heroku apps
				printf "\n\n\n${g}
				\r\tâ•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—
				\r\tâ•‘ â— ${w}UÊÉ¢á´œÊŸá´€á´á´€ Bá´œÊŸá´œÉ´á´€á´á´€á´…Éª ${g}â•‘
				\r\tâ•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•\n\n\n"
				advance="False"
			else
				changeName="$appName"
				break
			fi
		fi

		if [[ $2 == remove ]];then
			read -e -p $'\t\e[1;97m[ \e[32mKá´€ÊŸá´…ÉªÊ€ÉªÊŸá´€á´„á´€á´‹ UÊÉ¢á´œÊŸá´€á´á´€ Aá´…ÉªÉ´Éª GÉªÊ€ÉªÉ´Éªá´¢ \e[97m] \e[32m~ \e[31mÂ»Â»\e[97m ' appName
			printf "\n\n\n"
			appControl=$(heroku apps |grep -o ^$appName\$)
			if [[ ! -n $appControl ]];then
				heroku apps
				printf "\n\n\n${g}
				\r\tâ•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—
				\r\tâ•‘ â— ${w}UÊÉ¢á´œÊŸá´€á´á´€ Bá´œÊŸá´œÉ´á´€á´á´€á´…Éª ${g}â•‘
				\r\tâ•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•\n\n\n"
				advance="False"
			else
				removeName="$appName"
				break
			fi

		fi

		if [[ $2 == "" ]];then
			read -e -p $'\t\e[1;97m[ \e[32mUÊÉ¢á´œÊŸá´€á´á´€ Aá´…Éª GÉªÊ€ÉªÉ´Éªá´¢ \e[97m] \e[32m~ \e[31mÂ»Â»\e[97m ' appName
		fi

		_advance () {
			appCheck=$(curl -s https://$appName.herokuapp.com |grep -o "www.herokucdn.com/error-pages/no-such-app.html" |wc -l)

			if [[ $1 == True ]];then
				if [[ $appCheck == 0 ]];then
					Break="True"
				else
					printf "\n\n${g}
					\r\tâ•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—
					\r\tâ•‘ â— ${w}UÊÉ¢á´œÊŸá´€á´á´€ Ká´œÊŸÊŸá´€É´ÉªÊŸá´ÉªÊá´Ê€ ${g}â•‘
					\r\tâ•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•\n\n\n"
				fi
			else
				if [[ $appCheck == 1 ]];then
					Break="True"
				else
					printf "\n\n${g}
					\r\tâ•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—
					\r\tâ•‘ â— ${w}UÊÉ¢á´œÊŸá´€á´á´€ Ká´œÊŸÊŸá´€É´ÉªÊŸÉªÊá´Ê€ ${g}â•‘
					\r\tâ•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•\n\n\n"
				fi

			fi
		}

		if [[ $advance == True ]];then
			_advance $1
		fi

		if [[ $Break == True ]];then
			break
		fi
	done
}

function _appShowOptions () {
	read -e -p $'\t\e[1;97m[ \e[32mGá´Ê€á´œÉ´á´›á´œÊŸá´‡á´á´‡á´‹ Iêœ±á´›á´‡Ê€ á´Éªêœ±ÉªÉ´Éªá´¢? \e[33m[Ê/N] \e[97m] \e[32m~ \e[31mÂ»Â»\e[97m ' appShow
	if [[ $appShow == y || $appShow == Y || $appShow == "" ]];then
		am start -a android.intent.action.VIEW "https://$appName.herokuapp.com"
	fi
	printf "\n\n\n${g}
	\r\tâ•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—
	\r\tâ•‘ â— ${w}CÉªá´‹Éªêœ± Yá´€á´˜ÉªÊŸá´…Éª ${g}â•‘
	\r\tâ•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•\n\n\n"
	exit
}

function _permissionControl () {

	if [[ $whoamiStatus == False ]];then
		printf "\n\n\n${g}
		\r\tâ•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—
		\r\tâ•‘ â— ${w}Dá´‡á´ á´€á´ Eá´›á´á´‡á´‹ Iá´„ÉªÉ´ GÉªÊ€Éªêœ± Yá´€á´˜ÉªÉ´Éªá´¢ ${g}â•‘
		\r\tâ•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•\n\n\n"
		heroku login
		printf "\n\n\n"
		_logout
	fi

	if [[ $1 == appStatus && $appStatus == NoPermission ]];then
		printf "\n\n\n${g}
		\r\tâ•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—
		\r\tâ•‘ â— ${w}Bá´œ UÊÉ¢á´œÊŸá´€á´á´€á´…á´€ Iêœ±ÊŸá´‡á´ Yá´€á´˜á´á´€á´‹ Iá´„ÉªÉ´ Iá´¢É´ÉªÉ´Éªá´¢ Yá´á´‹ ${g}â•‘
		\r\tâ•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•\n\n\n"
		_logout
	fi

}

clear
printf "\n\n\e[32m
\t\t\t\t\t   â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—
